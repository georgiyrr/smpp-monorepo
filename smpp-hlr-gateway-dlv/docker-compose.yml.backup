      CACHE_WARMUP_DAYS: ${CACHE_WARMUP_DAYS:-7}
      CACHE_WARMUP_LIMIT: ${CACHE_WARMUP_LIMIT:-50000}
      LOG_LEVEL: ${LOG_LEVEL:-INFO}
      LOG_FORMAT: ${LOG_FORMAT:-json}
      METRICS_ENABLED: ${METRICS_ENABLED:-true}
      METRICS_PORT: 9091
