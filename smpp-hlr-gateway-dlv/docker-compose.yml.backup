      DLR_DELAY_SECONDS: ${DLR_DELAY_SECONDS:-1.0}
    healthcheck:
      test: ["CMD", "python", "main.py", "healthcheck"]
      interval: 30s
      timeout: 10s
      start_period: 40s
      retries: 3
    networks:
      - shared-network
    deploy:
      resources:
        limits:
          cpus: '4'
          memory: 2G
        reservations:
          cpus: '1'
          memory: 512M

networks:
  shared-network:
    external: true
    name: shared-network